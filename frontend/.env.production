# Variables d'environnement pour la production Netlify

# URL de l'API backend (à remplacer par votre vraie URL)
VITE_API_URL=https://amo-solution-btp-api.railway.app/api/v1

# URL de base de l'application
VITE_APP_URL=https://amo-solution-btp.netlify.app

# Environnement
VITE_NODE_ENV=production

# Activation des fonctionnalités
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_SENTRY=true

# Configuration des uploads
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Configuration de l'authentification
VITE_JWT_STORAGE_KEY=amo_token
VITE_REFRESH_STORAGE_KEY=amo_refresh_token

# Timeout des requêtes API (en millisecondes)
VITE_API_TIMEOUT=30000

# Configuration des feature flags (par défaut activé en prod)
VITE_ENABLE_2FA=true
VITE_ENABLE_AUDIT_LOGS=true
VITE_ENABLE_DARK_MODE=false

# URL de support
VITE_SUPPORT_URL=https://support.amo-solution-btp.com
VITE_DOCS_URL=https://docs.amo-solution-btp.com

# Informations de version (sera injectée par le build)
VITE_APP_VERSION=$npm_package_version