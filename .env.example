# ===== ENVIRONNEMENT =====
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001

# ===== BASE DE DONNÉES =====
DATABASE_URL="postgresql://amo_user:amo_password@localhost:5432/amo_solution_btp?schema=public"
POSTGRES_USER=amo_user
POSTGRES_PASSWORD=amo_password
POSTGRES_DB=amo_solution_btp

# ===== REDIS (Cache & Sessions) =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password

# ===== AUTHENTIFICATION =====
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE_TIME=15m
JWT_REFRESH_EXPIRE_TIME=7d

# ===== 2FA (TOTP) =====
TOTP_SERVICE_NAME=A.M.O Solution BTP
TOTP_ISSUER=amo-solution-btp.com

# ===== CHIFFREMENT =====
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ===== EMAIL (SMTP) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM="A.M.O Solution BTP" <noreply@amo-solution-btp.com>

# ===== STOCKAGE FICHIERS =====
# Développement (MinIO)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=amo-documents
MINIO_USE_SSL=false

# Production (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=amo-documents-prod

# ===== MONITORING & LOGS =====
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn-here

# ===== SÉCURITÉ =====
# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:5173

# ===== WEBHOOKS =====
WEBHOOK_SECRET=your-webhook-secret-key

# ===== SIGNATURE ÉLECTRONIQUE =====
DOCUSIGN_INTEGRATION_KEY=your-docusign-key
DOCUSIGN_SECRET_KEY=your-docusign-secret

# ===== API EXTERNES =====
# Connecteur comptabilité
CEGID_API_KEY=your-cegid-api-key
SAGE_API_KEY=your-sage-api-key

# ===== NOTIFICATIONS =====
# Push notifications
FIREBASE_SERVER_KEY=your-firebase-server-key

# SMS (pour 2FA d'urgence)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+33123456789

# ===== FEATURE FLAGS =====
FEATURE_FLAG_OVERRIDE=false

# ===== DÉVELOPPEMENT UNIQUEMENT =====
DEBUG=true
PRISMA_DEBUG=false